mixin  rating(data, options, classes)
    .rating(class=classes)
        .stars
            form(action='')
                - var i = 5;
                while i > 0
                    - checked = false;
                    - if(i===parseInt(data)) var checked = true;
                    input(type='radio', name='star', class=['star','star-#{i}'], id='star-'+i, checked=checked, disabled=options)
                    label(for='star-#{i}', class=['star','star-#{i}'])
                    - i--