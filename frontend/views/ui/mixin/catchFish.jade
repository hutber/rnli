mixin catchFish(data)
   - var attr = data.attr || {}
   - data = data.data;
   .box.catchfishbox&attributes(attr)
      .image
         img(src='img/placeholder.gif')
      .text
         h3 #{data.species}
         .item W
            span #{data.weight1}lb #{data.weight2}oz
         .item L
            span #{data.height1}ft #{data.height2}in
         .item
            Rating
      //.icon
         i(class='icon-minus')
         i(class='icon-plus')
      .fishdetails
         .location
         .conditions